extends Layouts/login-layout.pug

block content 
     .loginContainer 
          h1 Register 
          form#registerForm(method="post", onsubmit ="event.preventDefault(); validateForm();") 
                p.errorMessage #{errorMessage}

                input(type="text", name="firstname" , placeholder= "First name", value=firstname, require="")
                input(type="text", name="lastname" , placeholder= "Last name", value=lastname , require="")
                input(type="text", name="Username" , placeholder= "Username",value=Username, require="")
                input(type="email", name="Email" , placeholder= "Email",value=Email require="")
                input#password(type="password", name="password" , placeholder= "Password", value=password, require="")
                input#passwordConf(type="password", name="passwordconf" , placeholder= "Confirm Password",require="")
                br
                input(type="submit", value="Register")
                br 
                    
                a(href="/login") Already have an account? Login here.
        
     script.
                      var pass=document.getElementById("password") 
                      var passconf=document.getElementById("passwordConf") 
                      var form =document.getElementById("registerForm") 

                       console.log("hiiiout");
                      
                      function validateForm (){
                        if(pass.value != passconf.value){
                           alert("Passwords do not match. Please try again.")
                        }
                        else{
                            form.submit()
                        }
                      }
   
                                        